<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="570dp"
                    android:layout_height="300dp">
        <TableLayout
                android:id="@+id/play_grid"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false">


            <TableRow android:layout_gravity="center_horizontal">
                <Button android:id="@+id/one"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="1"
                        android:textSize="60dp" />
                <Button android:id="@+id/two"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="2"
                        android:textSize="60dp" />
                <Button android:id="@+id/three"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="3"
                        android:textSize="60dp" />
            </TableRow>

            <TableRow android:layout_gravity="center_horizontal">
                <Button android:id="@+id/four"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="4"
                        android:textSize="60dp" />
                <Button android:id="@+id/five"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="5"
                        android:textSize="60dp" />
                <Button android:id="@+id/six"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="6"
                        android:textSize="60dp" />

            </TableRow>

            <TableRow android:layout_gravity="center_horizontal">
                <Button android:id="@+id/seven"
                        android:layout_width="95dp"
                        android:layout_height="100dp"
                        android:text="7"
                        android:textSize="60dp" />
                <Button android:id="@+id/eight"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="8"
                        android:textSize="60dp" />
                <Button android:id="@+id/nine"
                        android:layout_width="100dp"
                        android:layout_height="95dp"
                        android:text="9"
                        android:textSize="60dp" />

            </TableRow>
        </TableLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/play_grid"
                        android:layout_alignParentRight="true" android:id="@+id/relativeLayout">

            <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info label"
                    android:id="@+id/information"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center" android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/relativeLayout"
                android:layout_toRightOf="@+id/play_grid">


            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hWins"
                    android:id="@+id/hwin"
                    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ties"
                    android:id="@+id/tie"
                    android:layout_marginTop="38dp" android:layout_below="@+id/hwin"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aWins"
                    android:id="@+id/awin" android:layout_below="@+id/tie"
                    android:layout_alignParentLeft="true" android:layout_marginTop="40dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/hWinNum"
                    android:layout_alignParentTop="true" android:layout_alignLeft="@+id/aWinNum"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tieNum"
                    android:layout_above="@+id/awin" android:layout_alignParentRight="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/aWinNum"
                    android:layout_alignTop="@+id/awin" android:layout_alignLeft="@+id/tieNum"/>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>